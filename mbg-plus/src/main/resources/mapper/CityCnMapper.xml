<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sxia.city.mapper.CityCnMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sxia.city.entity.CityCn">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="country_code" property="countryCode" />
        <result column="district" property="district" />
        <result column="population" property="population" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, country_code, district, population
    </sql>

    <!--批量插入-->
    <insert id="batchInsertData">
        insert into city_cn(`name`, country_code, district, population)
        values
        <foreach collection="list" item="city" separator=",">
            (#{city.name}, #{city.countryCode},#{city.district}, #{city.population})
        </foreach>
    </insert>

    <select id="selectAllByPage" resultMap="BaseResultMap" >
        SELECT
        `name`,
        country_code,
        district,
        population
        FROM
        city_cn
        WHERE 1 = 1
        <if test="isDelete != null">
            and is_delete = #{isDelete}
        </if>
    </select>

</mapper>
